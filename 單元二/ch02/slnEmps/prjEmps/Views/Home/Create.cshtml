
@{
    ViewBag.Title = "員工新增";
}

<h2>員工新增</h2>

<form method="post" action="@Url.Action("Create")">
    <p>
       員工姓名<input type="text" name="fName" required  class="form-control" />
     </p>
    <p>
        員工電話<input type="text" name="fPhone" required class="form-control" />
    </p>
    <p>
        員工薪資<input type="number" name="fSalary" required class="form-control"
                   max="70000" min="20000"/>
    </p>
    <p>
        <input type="submit"  value="新增" class="btn btn-success"/>
    </p>
</form>

